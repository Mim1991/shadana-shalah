<div class="display-flex-box">
  <%= render "shared/heading" %>


  <div class="container blog-mt">
  <div class="row">
    <% @blogs.reverse.each do |blog| %>
      <div class="col-12 col-md-6 col-lg-4 blog-card-margin">
        <% if blog.photos.attached? %>
            <% background_url = cl_image_path blog.photos.first.key, height: 300, width: 400, crop: :fill %>
        <% else %>
          <% background_url = 'https://source.unsplash.com/500x400/?cocktail' %>
        <% end %>

        <div class="blog-card">
          <div class="card" style="background-image: url('<%= background_url %>'); height: 430px; background-size: cover">
          </div>
          <div class="blog-headline">
            <h2><%= link_to blog.title, blog_path(blog)%></h2>
            <p><%= blog.created %></p>
          </div>
        </div>

      </div>
    <% end %>
  </div>

<%= link_to "Create a Post", new_blog_path %>
</div>
